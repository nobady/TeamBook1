<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Home_Card_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <declare-styleable name="CustomTabItem">

        <attr name="text" format="string"/>
        <attr name="isSelect" format="boolean"/>
        <attr name="textColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="selectedTextSize" format="dimension"/>
        <attr name="tabIndicatorHeight" format="dimension"/>
        <attr name="tabIndicatorBackground" format="reference"/>
    </declare-styleable>

</resources>
